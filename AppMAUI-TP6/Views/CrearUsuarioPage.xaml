<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMAUI_TP6.Views.CrearUsuarioPage"
             xmlns:vm="clr-namespace:AppMAUI_TP6.ViewModel"
             x:DataType="vm:CrearUsuarioViewModel"
             NavigationPage.HasBackButton="False"
             Title="{Binding Title}">
    <VerticalStackLayout Padding="20" VerticalOptions="Center">
        
        <!--nombre-->
        <Entry
            Placeholder="Nombre"
            Text="{Binding Usuario.Nombre}" 
            PlaceholderColor="#D3D3D3"
            TextColor="#E6E6E6"
            HeightRequest="50"
            Margin="0,10,0,0"/>
        <!--apellido-->
        <Entry
            Placeholder="Apellido"
            Text="{Binding Usuario.Apellido}" 
            PlaceholderColor="#D3D3D3"
            TextColor="#E6E6E6"
            HeightRequest="50"
            Margin="0,10,0,0"/>
        <!--Username-->
        <Entry
            Placeholder="Nombre de usuario"
            Text="{Binding Usuario.Username}" 
            PlaceholderColor="#D3D3D3"
            TextColor="#E6E6E6"
            HeightRequest="50"
            Margin="0,10,0,0"/>
        <!--Password-->
        <Entry
            Placeholder="ContraseÃ±a"
            Text="{Binding Usuario.Password}" 
            PlaceholderColor="#D3D3D3"
            TextColor="#E6E6E6"
            HeightRequest="50"
            Margin="0,10,0,0"/>
        <!--email-->
        <Entry
            Placeholder="Correo electronico"
            Text="{Binding Usuario.Email}" 
            PlaceholderColor="#D3D3D3"
            TextColor="#E6E6E6"
            HeightRequest="50"
            Margin="0,10,0,0"/>
        <!--Nro celular-->
        <Entry
            Placeholder="Numero celular" Keyboard="Numeric"
            Text="{Binding Usuario.NroCelular}" 
            PlaceholderColor="#D3D3D3"
            TextColor="#E6E6E6"
            HeightRequest="50"
            Margin="0,10,0,0"/>
        <!--rol-->
        <Entry
            Placeholder="Rol de usuario"
            Text="{Binding Usuario.Rol}" 
            PlaceholderColor="#D3D3D3"
            TextColor="#E6E6E6"
            HeightRequest="50"
            Margin="0,10,0,0"/>

        <Button Text="Crear" 
                Command="{Binding CrearCommand}" 
                TextColor="#D3D3D3"
                BackgroundColor="Green"
                FontSize="20"
                HeightRequest="48"
                VerticalOptions="EndAndExpand"
                Margin="0,30,0,0"/>

        <Button Text="Cancelar" 
                Command="{Binding GoBackCommand}" 
                TextColor="White"
                BackgroundColor="Gray"
                FontSize="18"
                HeightRequest="40"
                VerticalOptions="EndAndExpand"
                Margin="0,20,0,0"/>
    </VerticalStackLayout>
</ContentPage>